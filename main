import turtle

while True:
    try:
        number_of_hexagons = int(input('Введите количество шестиугольников: '))
        if 4 <= number_of_hexagons <= 20:
           break
        else:
            print('Введите число от 4 до 20')
    except ValueError:
        print('Неверный формат')
